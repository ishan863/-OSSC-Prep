rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and update their own data
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent deletion
    }
    
    // Questions collection (cached AI-generated questions)
    match /questions/{questionId} {
      // Anyone authenticated can read questions
      allow read: if isAuthenticated();
      // Only allow creation with valid structure
      allow create: if isAuthenticated() && 
        request.resource.data.keys().hasAll(['question', 'options', 'correctAnswer', 'subject', 'topic', 'difficulty']);
      allow update: if false; // Questions are immutable
      allow delete: if false;
    }
    
    // Practice attempts collection
    match /attempts/{attemptId} {
      // Users can read their own attempts
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Users can create attempts with their userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update their own attempts
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false; // Keep attempt history
    }
    
    // Wrong questions collection
    match /wrong_questions/{docId} {
      // Users can read their own wrong questions
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Users can add wrong questions
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update (mark as reviewed) or delete their wrong questions
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Mock tests collection
    match /mock_tests/{testId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
    
    // Daily tests collection
    match /daily_tests/{testId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
    
    // Chat history collection
    match /chat_history/{chatId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Analytics collection
    match /analytics/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
    
    // Syllabus collection (admin managed - read only for users)
    match /syllabus/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only via Firebase console
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
